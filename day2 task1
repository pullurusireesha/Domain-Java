//create table Employee with the following attributes and constraints

EmpFName
EmpMName
EmpLastName
EmpAge -> must be a positive number and less than 50
EmpCity -> should begin with letter B (Ex: Bangalore , Bijapur)
EmpDesignation -> can be any manager (Ex sales manager, acc manager)
EmpId -> primary key must have 5 chars (EX: emp01,emp02,emp03)
empDOB -> must be a date(data type) column


SQL> create table Employee
  2  (
  3  EmpFName varchar(20),
  4  EmpMName varchar(20),
  5  EmpLastName varchar(20),
  6  EmpAge int check(EmpAge between 1 and 50),
  7  EmpCity varchar(20) check(EmpCity like 'B%'),
  8  EmpDesignation varchar(20) check(EmpDesignation like '%manager'),
  9  empId varchar(5) primary key check(EmpId like 'emp%'),
 10  EmpDOB date
 11  );

Table created.

SQL> insert into Employee values('p','Navya','SriReddy',25,'Bangalore','Acc manager','emp20','20-OCT-1999');

1 row created.

SQL> insert into Employee values('s','venkata','kumari',27,'Bhilai','Marketing manager','emp21','27-MAR-1999');

1 row created.

SQL> insert into Employee values('q','Naga','Madhuri',45,'Bhopal','Financial manager','emp22','08-MAR-1978');

1 row created.

SQL> insert into Employee values('sai','konda','kumar',44,'Bareilly','Sales manager','emp24','09-SEP-1977');

1 row created.

SQL> insert into Employee values('pulluru','reddy','Sireesha',21,'Bhiwandi','product manager','emp25','10-OCT-1999');

1 row created.

